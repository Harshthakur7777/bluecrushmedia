  <script>
    document.addEventListener("DOMContentLoaded", function () {
        let sendButton = document.getElementById('sendMessage');
        
        // Check if button exists before adding event listener
        if (sendButton) {
            sendButton.addEventListener('click', function () {
                let name = document.getElementById('name').value.trim();
                let email = document.getElementById('email').value.trim();
                let phone = document.getElementById('number').value.trim();
                let message = document.getElementById('message').value.trim();
    
                // Check if all fields are filled
                if (!name || !email || !phone || !message) {
                    alert("Please fill in all fields before sending the message.");
                    return;
                }
    
                let subject = `Contact Form Submission from ${name}`;
                let body = `Name: ${name}%0AEmail: ${email}%0APhone: ${phone}%0AMessage: ${message}`;
    
                // Open Gmail compose with pre-filled details
                window.open(`https://mail.google.com/mail/?view=cm&fs=1&to=contact@bluecrushmedia.in&su=${subject}&body=${body}`, '_blank');
            });
        } else {
            console.error("❌ sendMessage button not found in DOM.");
        }
    });
    </script>
